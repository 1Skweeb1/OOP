<Window x:Class="SimpleDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Простая форма" Height="1000" Width="600">

    <Grid Margin="10">
        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10" Height="51">

                <Label Content="Введите пол:"/>
                <ComboBox x:Name="SelectGender" Height="30" Margin="0,5,0,10" Width="148">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                    <ComboBoxItem Content="MaleAndFemale"/>
                </ComboBox>

                <Label Content="Введите высоту:"/>
                <TextBox x:Name="SelectHeight" Height="30" Margin="0,5,0,10" Width="31"/>

                <Label Content="Введите ширину:"/>
                <TextBox x:Name="SelectWidth" Height="30" Margin="0,5,0,10" Width="44"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10" Height="51">

                <Label Content="Введите материал:"/>
                <ComboBox x:Name="SelectFabricType" Height="30" Margin="0,5,0,10" Width="111">
                    <ComboBoxItem Content="Cotton"/>
                    <ComboBoxItem Content="Linen"/>
                    <ComboBoxItem Content="Wool"/>
                    <ComboBoxItem Content="Silk"/>
                </ComboBox>
                <Label Content="Введите цвет:" RenderTransformOrigin="0.514,0.562"/>
                <TextBox x:Name="SelectColor" Height="30" Margin="0,5,0,10" Width="52"/>

                <Label Content="Введите тип:"/>
                <ComboBox x:Name="SelectClothType" Height="30" Margin="0,5,0,10" Width="111">
                    <ComboBoxItem Content="Trousers"/>
                    <ComboBoxItem Content="Skirt"/>
                    <ComboBoxItem Content="Coat"/>
                </ComboBox>
               

            </StackPanel>
            
            <Button x:Name="btnAddCloth" Content="Добавить одежду" 
                        Width="120" Height="30" Margin="0,0,5,0" Click="btnAddCloth_Click"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Введите номер верха:"/>
                <TextBox x:Name="SelectTopOfCostume" Height="30" Margin="0,5,0,10" Width="44"/>
                <Label Content="Введите номер низа:"/>
                <TextBox x:Name="SelectBottomOfCostume" Height="30" Margin="0,5,0,10" Width="44"/>
                <Button x:Name="btnAddCostume" Content="Добавить костюм" 
             Width="120" Height="30" Margin="10,0,5,0" Click="btnAddCostume_Click"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                
                <Button x:Name="btnShowAll" Content="Показать всё" 
                    Width="100" Height="35" Margin="5,10" 
                    Click="BtnShowAll_Click" Background="LightBlue"/>
                <Button x:Name="btnShowCostumes" Content="Показать все костюмы" 
                    Width="132" Height="35" Margin="5,10" 
                    Click="BtnShowAll_Click" Background="LightBlue"/>
                <Button x:Name="btnShowTrousers" Content="Красные брюки" 
                     Width="132" Height="35" Margin="5,10" 
                     Click="BtnShowAll_Click" Background="Red"/>
                <Button x:Name="btnShowAllCount" Content="Количество всего по полу" 
                     Width="158" Height="35" Margin="5,10" 
                     Click="BtnShowAll_Click" Background="Beige"/>        
            </StackPanel>
           

            <Label Content="Результат:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtOutput" 
                     Height="357" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     Background="AliceBlue"/>

        </StackPanel>

    </Grid>

</Window>